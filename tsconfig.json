{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["src", "tests"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true
  }
}
